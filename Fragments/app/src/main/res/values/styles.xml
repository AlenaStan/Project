<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="VkProfile">
        <item name="android:background">@color/vk_profile_background</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>
    <style name="VkProfileHead" parent="VkProfile">
        <item name="android:background">@drawable/profile_head_background</item>
    </style>
    <style name="VkProfileStatusFull">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/profile_background</item>
    </style>
    <style name="VkProfileUserName" parent="VkProfileHead">
        <item name="android:textColor">@color/vk_profile_text_name</item>
        <item name="android:textSize">@dimen/text_size_user_name</item>
    </style>
    <style name="VkProfileOnlineStatus" parent="VkProfileHead">
        <item name="android:textColor">@color/vk_profile_text_online_status</item>
    </style>
    <style name="VkProfileStatus" parent="VkProfileHead">
        <item name="android:textColor">@color/vk_profile_text_status</item>

    </style>

    <style name="VkProfileCaption">
        <item name="android:textColor">@color/vk_profile_text_caption</item>
        <item name="android:textSize">@dimen/text_size_profile_caption</item>
    </style>
    <style name="VkProfileCaptionGroup">
        <item name="android:textColor">@color/vk_profile_text_caption_group</item>
        <item name="android:textSize">@dimen/text_size_profile_caption</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="VkProfileInfo">
        <item name="android:textColor">@color/vk_profile_text_info</item>
        <item name="android:textSize">@dimen/text_size_profile_info</item>
    </style>

</resources>
