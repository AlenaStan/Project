<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_below="@id/profile_view_more"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/default_padding_half">

    <Button
        android:id="@+id/wall_poste_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wall_poste_button_text"
        android:background="@color/wall_poste_button_color"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_weight="5"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/ic_poste_image"

        android:layout_width="@dimen/ic_poste_image_width"
        android:layout_height="@dimen/ic_poste_image_height"
        android:src="@drawable/ic_poste_image"/>



</LinearLayout>